                <Button Content="Загрузить фото из Instagram" Command="{Binding Path=InstagramSurfCommand}" HorizontalAlignment="Stretch">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock TextAlignment="Center" Text="{Binding}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Grid>
        
    </Border>-->
</UserControl>
