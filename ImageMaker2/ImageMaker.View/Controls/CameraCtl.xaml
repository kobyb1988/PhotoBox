                                            <TransformGroup>
                                                <RotateTransform Angle="225" CenterX="25" CenterY="25"/>
                                                <TranslateTransform X="50" Y="-10" />
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <Path 
                                    x:Name="rightPath" 
