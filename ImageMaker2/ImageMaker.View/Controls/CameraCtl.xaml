                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Text" Value="Посмотрите в камеру" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=Counter}" Value="4">
                                                        <Setter Property="Text" Value="Приготовьтесь!" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Counter}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <TextBlock 
                                Text="{Binding Path=Counter}"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                               FontSize="300" Foreground="#808994">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=Counter}" Value="4">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=Counter}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        
                        <!--<TextBlock FontSize="300" Text="2" Foreground="#808994" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"/>-->
                    </Grid>
                </Border>
                <Border  Padding="0" Grid.Row="2">
                    <Grid  Width="890" Height="85">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.25*"/>
                        </Grid.ColumnDefinitions>
                        <customControls:BlueButton 
                            Command="{Binding Path=GoBackCommand}"
                            Background="{DynamicResource {x:Static themes:ThemeManager.OtherBorderColorKey}}"
                            Foreground="{DynamicResource {x:Static themes:ThemeManager.OtherForegroundColorKey}}"
                            CornerRadius="40"
                                InnerCornerRadius="40"
                                Padding="8"
                            Grid.Column="0"
                            FontSize="18"
                            HorizontalAlignment="Stretch"
                                               Content="Назад" 
                                               ShowBackButton="True" 
                                               CornerAlign="BottomLeft,TopLeft"/>

                        <Rectangle Grid.Column="1" Fill="#5543beb5"/>
                        <Button Grid.Column="1" 
                                Background="{DynamicResource {x:Static themes:ThemeManager.OtherBorderColorKey}}"
                            Foreground="{DynamicResource {x:Static themes:ThemeManager.OtherForegroundColorKey}}"
                                Command="{Binding Path=TakePictureCommand}">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="40" HorizontalAlignment="Center">
                                                    <Image Source="pack://application:,,,/ImageMaker.Themes;component/Resources/take_picture.png">
                                                        <Image.RenderTransform>
                                                            <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                                        </Image.RenderTransform>
                                                        <Image.RenderTransformOrigin>
                                                            <Point X="0.5" Y="0.5" />
                                                        </Image.RenderTransformOrigin>
                                                    </Image>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!--<customControls:BlueButton 
                            CornerRadius="40"
                                Padding="8"
                            FontSize="18"
                            ShowBackButton="True"
                            IsLeftOriented="False"
                            HorizontalAlignment="Stretch"
                        Grid.Column="2"
                            CornerAlign="TopRight,BottomRight"
                                               Content="Вперед"/>-->
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Viewbox>
    
