                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Counter}" Value="4">
                                                        <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                        <Path.Triggers>
                                            <EventTrigger RoutedEvent="Window.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="leftPath" 
                                                        Storyboard.TargetProperty="Opacity" From="1" To="0.5" 
                                                        Duration="0:0:1" BeginTime="0:0:0" AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Path.Triggers>
