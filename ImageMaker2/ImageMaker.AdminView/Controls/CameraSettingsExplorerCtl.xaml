<UserControl x:Class="ImageMaker.AdminView.Controls.CameraSettingsExplorerCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ImageMaker.AdminViewModels.ViewModels;assembly=ImageMaker.AdminViewModels"
             xmlns:customControls="clr-namespace:ImageMaker.Themes.CustomControls;assembly=ImageMaker.Themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:CameraSettingsExplorerViewModel}">
    <Border Padding="15" Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="6*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Border Background="White" Grid.ColumnSpan="2"
                            CornerRadius="6"
                            BorderBrush="{StaticResource ShadowBrushBottom}"
                            BorderThickness="0,1,0,5">
                <Border Background="White"
                            CornerRadius="6"
                                Padding="7"
                            BorderBrush="{StaticResource ShadowBrushLeft}"
                            BorderThickness="2,0,1,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Margin="5" HorizontalAlignment="Left">
                            <Image 
                       Source="pack://application:,,,/ImageMaker.CommonView;component/Resources/camera_title_orange.png">
                            </Image>
                        </Viewbox>
                        <Border Margin="10" Grid.Column="1" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0" Padding="3">
                            <customControls:CustomButton Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                Content="Сохранить"
                Command="{Binding Path=SaveSettings}"
                VerticalAlignment="Stretch" HorizontalAlignment="Left" />
                        </Border>
                    </Grid>

                </Border>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Label Grid.Column="0" Grid.Row="0" Content="Режим съемки: " HorizontalAlignment="Right"/>
                <Label Grid.Column="0" Grid.Row="1" Content="Диафрагма: " HorizontalAlignment="Right"/>
                <Label Grid.Column="0" Grid.Row="2" Content="Экспокоррекция: " HorizontalAlignment="Right"/>
                <Label Grid.Column="0" Grid.Row="3" Content="ISO: " HorizontalAlignment="Right"/>
                <Label Grid.Column="0" Grid.Row="4" Content="Баланс белого: " HorizontalAlignment="Right"/>
                <Label Grid.Column="0" Grid.Row="5" Content="Выдержка: " HorizontalAlignment="Right"/>
                <ComboBox Grid.Column="1" Grid.Row="0" 
                          ItemsSource="{Binding Path=AEModeValues}" 
                          SelectedValue="{Binding Path=SelectedAeMode}" 
                          
                          DisplayMemberPath="Value" SelectedValuePath="Key">
                    
                </ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="1" 
                          ItemsSource="{Binding Path=AvValues}" 
                          SelectedValue="{Binding Path=SelectedAvValue}"
                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                <ComboBox Grid.Column="1" Grid.Row="2" 
                          ItemsSource="{Binding Path=ExposureValues}" 
                          SelectedValue="{Binding Path=SelectedCompensation}"
                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                <ComboBox Grid.Column="1" Grid.Row="3" 
                          ItemsSource="{Binding Path=ISOValues}" 
                          SelectedValue="{Binding Path=SelectedIsoSensitivity}"
                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                <ComboBox Grid.Column="1" Grid.Row="4" 
                          ItemsSource="{Binding Path=WhiteBalanceValues}" 
                          SelectedValue="{Binding Path=SelectedWhiteBalance}"
                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
                <ComboBox Grid.Column="1" Grid.Row="5" 
                          ItemsSource="{Binding Path=ShutterSpeedValues}" 
                          SelectedValue="{Binding Path=SelectedShutterSpeed}"
                          DisplayMemberPath="Value" SelectedValuePath="Key"/>
            </Grid>
            <Button 
                Content="&lt; Назад"
                Command="{Binding Path=GoBackCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" 
                    Grid.Row="2" />
        </Grid>
    </Border>

</UserControl>
