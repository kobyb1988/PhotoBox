<UserControl x:Class="ImageMaker.AdminView.Controls.PasswordPromptCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ImageMaker.AdminViewModels.ViewModels;assembly=ImageMaker.AdminViewModels"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:behaviors="clr-namespace:ImageMaker.CommonView.Behaviors;assembly=ImageMaker.CommonView"
             mc:Ignorable="d" 
             Background="{StaticResource BackgroundBrush}"
             d:DesignHeight="600" d:DesignWidth="800">
    <Viewbox Stretch="Fill">
        <Border Padding="30">
            <Border.Background>
                <ImageBrush ImageSource="../Resources/blur.jpg" />
            </Border.Background>
            <Grid d:DataContext="{d:DesignInstance viewModels:PasswordPromptViewModel}" Width="800" Height="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Введите пароль: " Foreground="#ffffff" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <PasswordBox Grid.Column="1" Grid.Row="0" x:Name="PwBox" Margin="5" FontSize="25">
                    <i:Interaction.Behaviors>
                        <behaviors:PasswordBehavior />
                    </i:Interaction.Behaviors>
                </PasswordBox>
                <Button Grid.Row="1" 
                        Margin="20"
                        Padding="40,20"
                        FontSize="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.ColumnSpan="2" Style="{StaticResource OpaqueButtonStyle}"  Content="ОК" Command="{Binding Path=SubmitCommand}" 
                CommandParameter="{Binding ElementName=PwBox, Path=SecurePassword}"/>
            </Grid>
        </Border>
       
    </Viewbox>
    
    
</UserControl>
