<UserControl x:Class="ImageMaker.AdminView.Controls.TemplateEditorCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ImageMaker.CommonView.Converters;assembly=ImageMaker.CommonView"
             xmlns:viewModels="clr-namespace:ImageMaker.AdminViewModels.ViewModels;assembly=ImageMaker.AdminViewModels"
             xmlns:images="clr-namespace:ImageMaker.AdminViewModels.ViewModels.Images;assembly=ImageMaker.AdminViewModels"
             xmlns:controls="clr-namespace:ImageMaker.AdminView.Controls"
             xmlns:customControls="clr-namespace:ImageMaker.AdminView.CustomControls"
             xmlns:customControls1="clr-namespace:ImageMaker.Themes.CustomControls;assembly=ImageMaker.Themes"
             xmlns:dragDrop="clr-namespace:ImageMaker.CommonView.Behaviors.DragDrop;assembly=ImageMaker.CommonView"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:TemplateEditorViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
        <converters:DoubleValueConverterExt x:Key="UintValueConverterExt" />

        <Style TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Padding="15" Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Border Background="White" Grid.ColumnSpan="2"
                            CornerRadius="6"
                            BorderBrush="{StaticResource ShadowBrushBottom}"
                            BorderThickness="0,1,0,5">
                <Border Background="White"
                            CornerRadius="6"
                                Padding="7"
                            BorderBrush="{StaticResource ShadowBrushLeft}"
                            BorderThickness="2,0,1,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Margin="5" HorizontalAlignment="Left">
                            <Image 
                       Source="pack://application:,,,/ImageMaker.CommonView;component/Resources/camera_title_orange.png">
                            </Image>
                        </Viewbox>
                        
                        <Border Margin="10" Grid.Column="1" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Отменить"
                Command="{Binding Path=UndoCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="2" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Повторить"
                Command="{Binding Path=RedoCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="3" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Добавить"
                Command="{Binding Path=AddImageCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="4" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Удалить"
                Command="{Binding Path=RemoveImageCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="5" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Сохранить"
                Command="{Binding Path=SaveCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="6" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Добавить подложку"
                Command="{Binding Path=AddBackgroundCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="7" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Добавить перекрытие"
                Command="{Binding Path=AddOverlayCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="8" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Удалить подложку"
                Command="{Binding Path=RemoveBackgroundCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>

                        <Border Margin="10" Grid.Column="9" BorderBrush="{StaticResource GrayBrush}" BorderThickness="2,0,0,0"
                                Padding="3">
                            <customControls1:CustomButton 
                                Style="{StaticResource LightGrayBtnStyle}"
                                Padding="5"
                                Content="Удалить перекрытие"
                Command="{Binding Path=RemoveOverlayCommand}"
                VerticalAlignment="Center" HorizontalAlignment="Left" />
                        </Border>
                        
                    </Grid>

                </Border>
            </Border>
            <Border Padding="15" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="Black" BorderThickness="2">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Path=Template.Background.Data, Converter={StaticResource ByteArrayToImageConverter}}" />
                            </Border.Background>
                            <Border.InputBindings>
                                <MouseBinding MouseAction="RightClick"
                                 Command="{Binding RelativeSource={RelativeSource AncestorType=controls:TemplateEditorCtl}, Path=DataContext.SelectObjectCommand}" 
                                                              CommandParameter="{x:Null}" />
                            </Border.InputBindings>
                            <ItemsControl
                                
                                  DataContext="{Binding Path=Template}" ItemsSource="{Binding Path=Children}" >
                                
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type images:TemplateImageViewModel}">
                                        <Label>
                                            <i:Interaction.Behaviors>
                                                <dragDrop:DragBehavior RelativeElement="{Binding ElementName=Viewbox}"/>
                                            </i:Interaction.Behaviors>
                                            <Label.Width>
                                                <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding Path="Width" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                    <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                </MultiBinding>
                                            </Label.Width>
                                            <Label.Height>
                                                <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding Path="Height" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                    <Binding Path="DataContext.Template.Height" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                </MultiBinding>
                                            </Label.Height>
                                            <Label.InputBindings>
                                                <!--<MouseBinding 
                                                    MouseAction="LeftClick"
                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=controls:TemplateEditorCtl}, 
                                                    Path=DataContext.SelectObjectCommand}" 
                                                              CommandParameter="{Binding Path=.}" />-->
                                            </Label.InputBindings>
                                            <Label.Style>
                                                <Style TargetType="{x:Type Label}">
                                                    <Setter Property="BorderBrush" Value="Black" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                    <Setter Property="Template">

                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Label}">
                                                                <Border 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                                                                    Width="{TemplateBinding Width}"
                                                                    Height="{TemplateBinding Height}">

                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="1*"/>
                                                                            <ColumnDefinition Width="8*"/>
                                                                            <ColumnDefinition Width="1*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="1*"/>
                                                                            <RowDefinition Height="8*"/>
                                                                            <RowDefinition Height="1*"/>
                                                                        </Grid.RowDefinitions>
                                                                        <Thumb Background="Gray" Grid.Row="0" Grid.Column="0" Cursor="{x:Static Cursors.SizeNWSE}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Left,Top" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="1" Grid.Column="0" Cursor="{x:Static Cursors.SizeWE}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Left" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="2" Grid.Column="0" Cursor="{x:Static Cursors.SizeNESW}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Left,Bottom" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="0" Grid.Column="2" Cursor="{x:Static Cursors.SizeNESW}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Right,Top" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="1" Grid.Column="2" Cursor="{x:Static Cursors.SizeWE}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Right" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="2" Grid.Column="2" Cursor="{x:Static Cursors.SizeNWSE}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Right,Bottom" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="0" Grid.Column="1" Cursor="{x:Static Cursors.SizeNS}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Top" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Thumb Background="Gray" Grid.Row="2" Grid.Column="1" Cursor="{x:Static Cursors.SizeNS}">
                                                                            <i:Interaction.Behaviors>
                                                                                <dragDrop:ResizeBehavior ResizeDirection="Bottom" />
                                                                            </i:Interaction.Behaviors>
                                                                        </Thumb>
                                                                        <Rectangle Fill="Gray" Grid.Column="1" Grid.Row="1"/>
                                                                        <ContentPresenter Grid.Column="1" Grid.Row="1"/>
                                                                    </Grid>

                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                            <Setter Property="BorderBrush" Value="Red" />
                                                            <Setter Property="BorderThickness" Value="2" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>

                                    </DataTemplate>
                                </ItemsControl.Resources>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas IsItemsHost="True" 
                                                x:Name="canvas"
                                                AllowDrop="True"
                                                MinWidth="{Binding Path=Width}" 
                                                MinHeight="{Binding Path=Height}">
                                            <Canvas.Background>
                                                <ImageBrush Opacity="{Binding RelativeSource={RelativeSource AncestorType=controls:TemplateEditorCtl}, Path=DataContext.OverlayOpacity}" 
                                                            ImageSource="{Binding Path=Overlay.Data, Converter={StaticResource ByteArrayToImageConverter}}" />
                                            </Canvas.Background>
                                            
                                            <i:Interaction.Behaviors>
                                                <dragDrop:DropBehavior RelativeElement="{Binding ElementName=canvas}"/>
                                            </i:Interaction.Behaviors>
                                        </Canvas>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="Canvas.ZIndex" Value="{Binding Path=Z}"/>
                                        <Setter Property="Canvas.Left">
                                            <Setter.Value>
                                                <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding Path="X" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                    <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Canvas.Top">
                                            <Setter.Value>
                                                <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding Path="Y" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                    <Binding Path="DataContext.Template.Height" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.Template>
                                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                                        <Border 
                                            Width="{TemplateBinding Width}"
                                            Height="{TemplateBinding Height}"
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}">
                                            <Viewbox Stretch="UniformToFill" x:Name="Viewbox">
                                                <ItemsPresenter />
                                            </Viewbox>
                                        </Border>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                            </ItemsControl>
                        </Border>
                        
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <StackPanel>
                                <StackPanel.Resources>
                                    <DataTemplate DataType="{x:Type images:TemplateImageViewModel}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Ширина: " HorizontalAlignment="Right"/>
                                            <Label Content="Высота: " Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"/>
                                            <Label Content="X: " Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right"/>
                                            <Label Content="Y: " Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right"/>
                                            <customControls:UIntTextBox Validation.ErrorTemplate="{x:Null}"
                                                                        Style="{StaticResource InputStyle}"
                                                                        Tag="Ширина"
                                                                      Grid.Column="1"
                                                                      MaxValue="{Binding Path=DataContext.Template.Width, RelativeSource={RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}}"
                                                     Grid.Row="0">
                                                <customControls:UIntTextBox.Text>
                                                    <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding Path="Width" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                        <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                    </MultiBinding>
                                                </customControls:UIntTextBox.Text>
                                            </customControls:UIntTextBox>
                                            <customControls:UIntTextBox Validation.ErrorTemplate="{x:Null}" Grid.Column="1" Grid.Row="1"
                                                                        Tag="Высота"
                                                                        Style="{StaticResource InputStyle}"
                                                                      MaxValue="{Binding Path=DataContext.Template.Height, RelativeSource={RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}}"
                                                                       >
                                                <customControls:UIntTextBox.Text>
                                                    <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding Path="Height" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                        <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                    </MultiBinding>
                                                </customControls:UIntTextBox.Text>
                                            </customControls:UIntTextBox>
                                            <customControls:UIntTextBox Validation.ErrorTemplate="{x:Null}" Grid.Column="1" Grid.Row="2" 
                                                                        Style="{StaticResource InputStyle}"
                                                                        Tag="X"
                                                                      MaxValue="{Binding Path=DataContext.Template.Width, RelativeSource={RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}}"
                                                                      >
                                                <customControls:UIntTextBox.Text>
                                                    <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding Path="X" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                        <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                    </MultiBinding>
                                                </customControls:UIntTextBox.Text>
                                            </customControls:UIntTextBox>
                                            <customControls:UIntTextBox Validation.ErrorTemplate="{x:Null}" Grid.Column="1" Grid.Row="3" 
                                                                        Tag="Y"
                                                                        Style="{StaticResource InputStyle}"
                                                                      MaxValue="{Binding Path=DataContext.Template.Height, RelativeSource={RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}}"
                                                                       >
                                                <customControls:UIntTextBox.Text>
                                                    <MultiBinding Converter="{StaticResource UintValueConverterExt}" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding Path="Y" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"/>
                                                        <Binding Path="DataContext.Template.Width" RelativeSource="{RelativeSource AncestorType={x:Type controls:TemplateEditorCtl}}" />
                                                    </MultiBinding>
                                                </customControls:UIntTextBox.Text>
                                            </customControls:UIntTextBox>
                                        </Grid>
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type images:TemplateViewModel}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Label Content="Ширина: " />
                                            <Label Content="Высота: " Grid.Row="1" Grid.Column="0"/>
                                            <customControls:UIntTextBox
                                                Grid.Column="1" Text="{Binding Path=Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0"
                                                Style="{StaticResource ErrorLabel}"/>
                                            <customControls:UIntTextBox Grid.Column="1" Grid.Row="1" 
                                                                        Text="{Binding Path=Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        Style="{StaticResource ErrorLabel}"/>
                                        </Grid>
                                    </DataTemplate>
                                </StackPanel.Resources>
                                <!--<ContentControl Content="{Binding Path=SelectedObject}" />-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Прозрачность перекрытия: " HorizontalAlignment="Right" VerticalAlignment="Center" />
                                    <Slider Margin="15" Minimum="0" Maximum="1" Value="{Binding Path=OverlayOpacity}" Grid.Column="1"/>
                                </Grid>
                                
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
                
            </Border>
            <Button Grid.Row="2" Content="&lt; Назад" Command="{Binding Path=GoBackCommand}" HorizontalAlignment="Left"/>
        </Grid>
    </Border>
</UserControl>
