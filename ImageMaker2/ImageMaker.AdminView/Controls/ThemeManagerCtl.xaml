                                                                    Stroke="White"
                                                                    StrokeThickness="3"
                                                                    Fill="{TemplateBinding Background}"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Stretch">

                                                                </Ellipse>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </Grid>
                                </DataTemplate>
                            </customControls:ContentButton.ContentTemplate>
