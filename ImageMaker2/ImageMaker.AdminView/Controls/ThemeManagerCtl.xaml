                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Stretch">

                                                                </Ellipse>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </Grid>
                                </DataTemplate>
                            </customControls:ContentButton.ContentTemplate>
                        </customControls:ContentButton>
