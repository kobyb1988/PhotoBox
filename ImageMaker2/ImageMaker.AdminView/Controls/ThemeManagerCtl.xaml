                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="{Binding Path=Data, Converter={StaticResource ByteArrayToImageConverter}}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="OverridesDefaultStyle" Value="True" />
