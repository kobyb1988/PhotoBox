                        <customControls:ContentButton Grid.Row="2" Grid.Column="1"
                                                      
                            VerticalContentAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Title="Цвет кнопок:" 
                            Content="{Binding Path=OtherWindowsButtonColor}">
                            <customControls:ContentButton.IconBrush>
