                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Главное окно" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20" Grid.ColumnSpan="2"/>
                        <customControls:ContentButton Grid.Row="1"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Title="Цвет&#10;кнопок:"
                            Content="{Binding Path=MainWindowBackgroundColor}">
                            <customControls:ContentButton.IconBrush>

                                <ImageBrush ImageSource="../Resources/icons_3.png" Viewbox="0.50,0.45,0.5,0.5">
                                    <ImageBrush.Transform>
                                        <ScaleTransform ScaleX="0.4" ScaleY="0.4" />
                                    </ImageBrush.Transform>
                                    <ImageBrush.RelativeTransform>
                                        <TranslateTransform X="0.8" Y="0.7" />
                                    </ImageBrush.RelativeTransform>
                                </ImageBrush>
                            </customControls:ContentButton.IconBrush>

                            <customControls:ContentButton.ContentTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.65*"/>
                                            <ColumnDefinition Width="0.35*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <Button Grid.Column="1"
                                            Command="{Binding Path=DataContext.PickColorCommand, RelativeSource={RelativeSource AncestorType=customControls:ContentButton}}"
                                            CommandParameter="{x:Static viewModels:ColorType.MainBackground}">
                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <SolidColorBrush Color="{Binding}" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type Button}">
                                                                <Ellipse Stretch="Fill"
                                                                    Stroke="White"
                                                                    StrokeThickness="3"
                                                                    Fill="{TemplateBinding Background}"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Stretch">

                                                                </Ellipse>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </Grid>
                                </DataTemplate>
                            </customControls:ContentButton.ContentTemplate>
                        </customControls:ContentButton>
                        <customControls:ContentButton Grid.Row="1" Grid.Column="1"
