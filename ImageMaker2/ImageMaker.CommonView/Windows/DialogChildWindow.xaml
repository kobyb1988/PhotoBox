<Window x:Class="ImageMaker.CommonView.Windows.DialogChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dialogs="clr-namespace:ImageMaker.CommonViewModels.ViewModels.Dialogs;assembly=ImageMaker.CommonViewModels"
        xmlns:behaviors="clr-namespace:ImageMaker.CommonView.Behaviors"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MinWidth="350"
        MinHeight="200"
        d:DataContext="{d:DesignInstance dialogs:DialogBase}" 
        Title="{Binding Path=Title}" SizeToContent="WidthAndHeight" >
    <i:Interaction.Behaviors>
        <behaviors:WindowClosingBehavior />
    </i:Interaction.Behaviors>
    <Border CornerRadius="6">
        <ContentControl Content="{Binding}" />
    </Border>
</Window>
